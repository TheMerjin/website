<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Comment Box</title>
  <style>
    textarea:focus, input:focus{
    outline: none;
}
    .comment-box-container {
      max-width: 835px;
      width: 100%;
      margin-left: 0rem;
      margin: -1rem auto;    
      padding: 0rem;

    }

    #commentBox {
      width: 100%;
      resize: none;
      overflow: hidden;
      padding: 0.75rem;
      font-size: 1rem;
      box-sizing: border-box;
      border: 1px solid #ffe0c0;
      border-radius: 0;
      background-color: #fff8f4;
    }

    .button-wrapper {
      display: flex;
      justify-content: flex-end;
      margin-top: -2.25rem; /* Pull button upward */
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .custom-button {
      padding: 0.4rem 1rem;
      background-color: #fff8f4;
      border: 0px solid #ffe0c0;
      border-radius: 0;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s ease;
      font-size: 1rem;
    }

    .custom-button:hover {
      background-color: #ffe0c0;
    }

    @media (max-width: 800px) {
      .comment-box-container {
        max-width: 100vw;
        padding: 0 0.5rem;
      }
      #commentBox {
        font-size: 0.95rem;
        padding: 0.5rem;
      }
      .custom-button {
        font-size: 0.95rem;
        padding: 0.3rem 0.8rem;
    
      }
    }

    @media (max-width: 500px) {
      .comment-box-container {
        padding: 0 0.25rem;
      }
      #commentBox {
        font-size: 0.9rem;
        padding: 0.3rem;
      }
      .custom-button {
        font-size: 0.9rem;
        padding: 0.2rem 0.6rem;
      }
    }
  </style>
</head>
<body>
  <div>
    
  </div>

  <div class="comment-box-container">
    <textarea id="commentBox" rows="6" placeholder="Type your comment here..."></textarea>
    <div class="button-wrapper">
      <button type="submit" class="custom-button" style = "color: #757373;" >Post</button>
    </div>
  </div>

  <script>
    const textarea = document.getElementById("commentBox");
    if (textarea) {
      textarea.addEventListener('input', () => {
        const lines = textarea.value.split('\n').length;
        textarea.rows = Math.max(lines + 2, 6);
      });
    }
  </script>

</body>
</html>