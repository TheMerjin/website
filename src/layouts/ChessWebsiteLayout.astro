---
// Import your Header component once here
import Header from '../components/Header.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
   
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Site</title>
    <!-- You can add global CSS files here -->
    <link rel="icon" type="image/jpeg" href="/assets_task_01jyj60hf6fk59efxgcf6aerx2_1750809597_img_0.jpg" />
  </head>
  <body style="background-color: #f8f2e4; margin: 0; margin-left: 0rem;">
    <Header />

    <main style="max-width: 1100px; margin: 5rem auto; margin-left : 20rem; padding: 0 1rem;">
      <slot />  <!-- Page content will be injected here -->
    </main>
    
    <Analytics />
    <SpeedInsights />
    <style>
      @media (max-width: 768px) {
        main {
          max-width: 100vw !important;
          margin: 1rem !important;
          margin-left: 0 !important;
          padding: 0 1rem !important;
        }
      }
      @media (max-width: 600px) {
        main {
          max-width: 100vw !important;
          margin: 0.5rem !important;
          margin-left: 0 !important;
          padding: 0 0.5rem !important;
        }
      }
      @media (max-width: 480px) {
        main {
          max-width: 100vw !important;
          margin: 0.25rem !important;
          margin-left: 0 !important;
          padding: 0 0.25rem !important;
        }
      }
    </style>


  </body>

</html>