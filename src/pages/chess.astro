    max-width: 1100px;
    margin: 0 auto 2rem auto;
    background: #fff4ec;
    border: 1px solid #e6e1d7;
    padding: 1.5rem 1rem;
    border-radius: 0;
    box-shadow: none;
  }
  .chess-challenges h2 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1rem;
  }
  .challenges-list {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }
  .no-challenges {
    color: #888;
    font-size: 1rem;
    padding: 0.7rem 0;
    text-align: center;
  }
</style>
