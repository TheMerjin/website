---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
console.log(posts);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 800px;
				margin: 0 auto;
				padding: 2em 1em;
			}
			.post-list {
				display: flex;
				flex-direction: column;
				gap: 1.5em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.post-card {
				display: flex;
				align-items: flex-start;
				background: #fff;
				border-radius: 12px;
				box-shadow: 0 2px 8px rgba(var(--black), 0.06);
				transition: box-shadow 0.2s, transform 0.2s;
				border: 1px solid rgba(var(--gray), 0.12);
				padding: 1em 1.5em;
				gap: 1.5em;
			}
			.post-card:hover {
				box-shadow: 0 4px 16px rgba(var(--accent), 0.10), 0 2px 8px rgba(var(--black), 0.10);
				transform: translateY(-2px) scale(1.01);
			}
			.post-thumb {
				flex-shrink: 0;
				width: 90px;
				height: 90px;
				border-radius: 8px;
				object-fit: cover;
				background: #f6f6f6;
				margin-right: 0.5em;
			}
			.post-content {
				flex: 1 1 0%;
				min-width: 0;
				display: flex;
				flex-direction: column;
				gap: 0.3em;
			}
			.post-title {
				font-size: 1.25em;
				font-weight: 700;
				margin: 0;
				color: rgb(var(--black));
				text-decoration: none;
				line-height: 1.2;
				transition: color 0.2s;
			}
			.post-card:hover .post-title {
				color: var(--accent);
			}
			.post-date {
				font-size: 0.95em;
				color: rgb(var(--gray));
				margin: 0 0 0.2em 0;
			}
			.post-desc {
				font-size: 1em;
				color: rgb(var(--gray-dark));
				margin: 0;
				line-clamp: 2;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}
			@media (max-width: 720px) {
				main {
					padding: 1em 0.2em;
				}
				.post-card {
					flex-direction: column;
					align-items: stretch;
					gap: 0.7em;
					padding: 1em;
				}
				.post-thumb {
					width: 100%;
					height: 180px;
					margin-right: 0;
					margin-bottom: 0.5em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul class="post-list">
					{posts.map((post) => (
						<li class="post-card">
							<a href={`/blog/${post.id}/`} style="display:contents">
								{post.data.heroImage && (
									<img src={post.data.heroImage} alt="" class="post-thumb" width="90" height="90" loading="lazy" />
								)}
								<div class="post-content">
									<h3 class="post-title">{post.data.title}</h3>
									<p class="post-date"><FormattedDate date={post.data.pubDate} /></p>
									<p class="post-desc">{post.data.description}</p>
								</div>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
