---
import WebsiteLayout from '../layouts/WebsiteLayout.astro';
import ProfilePostCard from '../components/ProfilePostCard.astro';
import { supabase } from '../lib/supabase.js';

export const prerender = false;

// Get the username from the URL parameter
const { profile } = Astro.params;

// Fetch user profile data
let userProfile = null;
let userPosts = [];
let error = null;

try {
  // Get user profile by username
  const { data: profileData, error: profileError } = await supabase
    .from('profiles')
    .select('*')
    .eq('username', profile)
    .single();

  if (profileError) {
    error = 'User not found';
  } else {
    userProfile = profileData;
    
    // Get user's posts
    const { data: postsData, error: postsError } = await supabase
      .from('posts')
      .select('*')
      .eq('author_id', userProfile.id)
      .order('created_at', { ascending: false })
      .limit(10);

    if (!postsError) {
      userPosts = postsData || [];
    }
  }
} catch (err) {
  error = 'Failed to load profile';
}
---

<WebsiteLayout>
  <div class="profile-header">
    {error ? (
      <div class="error-message">
        <h1>User Not Found</h1>
        <p>The user "{profile}" could not be found.</p>
        <a href="/" class="back-link">‚Üê Back to Home</a>
      </div>
    ) : (
      <>
        <div class="user-info">
          <h1 class="username">{userProfile.username}</h1>
          <div class="user-stats">
            <span>Joined: {new Date(userProfile.created_at).toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'short',
              day: 'numeric'
            })}</span>
          </div>
          <div class="header-nav">
            <a href="#posts">Posts</a><span>&bull;</span>
            <a href="#">Comments</a><span>&bull;</span>
            <a href="#">Activity</a>
          </div>
        </div>
        <div>
          <h2>Bio</h2>
          <h5 class="bio">{userProfile.bio || 'No bio available.'}</h5>
        </div>
        <section class="post-section" id="posts">
          <h2>Posts</h2>
          <section id="posts">
            {userPosts.length === 0 ? (
              <p>No posts yet!</p>
            ) : (
              userPosts.map((post) => <ProfilePostCard post={post} key={post.id} />)
            )}
          </section>
        </section>
      </>
    )}
  </div>
</WebsiteLayout>

<style>
  .profile-header {
    padding: 1rem 5vw;
    border-bottom: 1px solid #fff4ec;
    max-width: 100vw;
    margin-left: auto;
    margin-right: auto;
  }

  .error-message {
    text-align: center;
    padding: 4rem 2rem;
  }

  .error-message h1 {
    color: #d32f2f;
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  .back-link {
    display: inline-block;
    margin-top: 1rem;
    color: #456650;
    text-decoration: none;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .post-section {
    margin: 0rem;
    padding: 1rem 0rem;
  }

  h1 {
    margin: 3px 3px 0.5rem 0;
    font-size: 2rem;
  }

  .user-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1rem;
    color: #555;
  }

  .user-stats span {
    display: inline-flex;
    align-items: center;
  }

  .user-stats svg {
    width: 1.1rem;
    height: 1.1rem;
    margin-right: 0.4rem;
    fill: currentColor;
  }

  .header-nav {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    font-size: 1.2rem;
    margin-left: -0.5rem;
    gap: 0.5rem;
  }

  .header-nav a {
    text-decoration: none;
    margin: 0 0.5rem;
    color: #456650;
    font-weight: 500;
  }

  .header-nav span {
    color: #999;
  }

  .bio {
    margin: 0;
    font-weight: normal;
    color: #555;
  }

  @media (max-width: 800px) {
    .profile-header {
      padding: 1rem 2vw;
      max-width: 100vw;
      margin-left: auto;
      margin-right: auto;
    }
    
    .header-nav {
      font-size: 1rem;
      flex-wrap: wrap;
      gap: 0.3rem;
    }
  }

  @media (max-width: 500px) {
    .profile-header {
      padding: 0.5rem 1vw;
    }
    
    .header-nav {
      font-size: 0.9rem;
      gap: 0.2rem;
    }
    
    h1 {
      font-size: 1.2rem;
    }
    
    .user-stats {
      font-size: 0.85rem;
    }
  }
  
</style> 