---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en">
	
    

    <body>
        <head>
            <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        </head>
        <Header />
        <h3 class = "login-title"> Welcome to Agora! Login or Register here traveller</h3>
        <div class="page-content"></div>
            <form id = "login-form" class = "login-form">

                <input type="text" class = login-input name="username" placeholder="Username" required> </input>
                <input type="password" class = login-input name="password" placeholder="Password" required> </input>
                <button type="submit">Login</button>
                <div class="auth-links">
                    <a href="/register" class="register-link">Register</a>
                    <a href="/reset-password" class="reset-link">Reset Password</a>
                </div>
            </form>
            </div>
        </div>
    </body>
</html>
<style>
    .page-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end; /* aligns everything to the right */
  gap: 0.5em;
}
    .login-title {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin-top: 20px;
    }
    .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }
    .auth-links {
        display: flex;
        width: 100%;
        justify-content: space-between;
        margin-top: 0.2em;
        }
    .login-input {
        width: 200px;
        padding: 10px;
        margin: 10px 10px;
        border: 1px solid #ccc;
    }
    .register-link {
        text-align: right;
        font-size: 16px;
        margin-top: 0px;
    }
    .reset-password-link {
        text-align: left;
        font-size: 16px;
        margin-top: 0px;
    }
    
    
</style>

