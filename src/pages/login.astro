---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <h3 class="login-title">Welcome to Agora! Login or Register here traveler</h3>

    <div class="page-content">
      <form id="login-form" class="login-form">
        <input
          type="text"
          class="login-input"
          name="username"
          placeholder="Username"
          required
        />
        <input
          type="password"
          class="login-input"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit">Login</button>

        <div class="auth-links">
          <a href="/register" class="register-link">Register</a>
          <a href="/reset-password" class="reset-link">Reset Password</a>
        </div>
      </form>
    </div>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      const msg = urlParams.get('msg');
      if (msg) {
        alert(msg); // or render message nicely on the page
      }
    </script>

    <Footer />
  </body>
</html>

<style>
  .login-title {
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-top: 20px;
  }

  .page-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
    margin-top: 2rem;
  }

  .login-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75em;
  }

  .login-input {
    width: 200px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .auth-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    width: 200px;
    margin-top: 1rem;
  }

  .auth-links a {
    text-decoration: none;
    color: #0077cc;
    font-size: 14px;
  }

  .auth-links a:hover {
    text-decoration: underline;
  }

  .register-link,
  .reset-link {
    text-align: center;
    font-size: 16px;
    margin-top: 0;
  }
</style>