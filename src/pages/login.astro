---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<html lang="en">
	
    

    <body>
        <head>
            <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        </head>
        <Header />
        <h3 class = "login-title"> Welcome to Agora! Login or Register here traveller</h3>
        <div class="page-content"></div>
            <form id = "login-form" class = "login-form">

                <input type="text" class = login-input name="username" placeholder="Username" required> </input>
                <input type="password" class = login-input name="password" placeholder="Password" required> </input>
                <button type="submit">Login</button>
                <div class="auth-links">
                    <a href="/register" class="register-link">Register</a>
                    <a href="/reset-password" class="reset-link">Reset Password</a>
                </div>
            </form>
            </div>
        </div>
    </body>
</html>
<style>
    .page-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end; /* aligns everything to the right */
  gap: 0.5em;
}
    /* Keep other styles as they are */

.login-title {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-top: 20px;
}

.page-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5em;
  margin-top: 2rem;
}

.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75em;
}

.login-input {
  width: 200px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.auth-links {
  display: flex;
  /* justify-content: space-between; /* REMOVE this line */
  justify-content: center; /* ADD this line - centers the flex items */
  gap: 1em; /* ADD this line - creates space between the links (adjust as needed) */
  width: 200px; /* You can keep this if you want the links container to align with the input width */
              /* Or remove it if you want the links to define their own width and be centered by .page-content */
  margin-top: 1rem;
}

.auth-links a {
  text-decoration: none;
  color: #0077cc;
  font-size: 14px;
}

.auth-links a:hover {
  text-decoration: underline;
}
