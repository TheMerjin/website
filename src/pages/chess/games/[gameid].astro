    padding: 0.25rem 0.75rem;
    background: #e6e1d7;
    color: #333;
    border-radius: 0;
    font-size: 0.75rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .player-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .player {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem 1rem;
    border-radius: 0;
    min-width: 120px;
    border: 1px solid #e6e1d7;
  }

  .white-player {
    background: #f8f4f0;
    border-color: #e6e1d7;
  }

  .black-player {
    background: #333;
    color: #fff4ec;
    border-color: #333;
  }

  .player-name {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .player-color {
    font-size: 0.8rem;
    opacity: 0.8;
    margin-top: 0.25rem;
  }

  .vs {
    font-weight: 600;
    color: #456650;
    font-size: 1.1rem;
  }

  .game-main {
    display: flex;
    justify-content: center;
    align-items: start;
  }

  .guest-setup {
    background: #f8f4f0;
    border: 1px solid #e6e1d7;
    padding: 2rem;
    border-radius: 0;
    margin-bottom: 2rem;
    text-align: center;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .guest-setup h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.3rem;
    color: #333;
    font-weight: 700;
  }

  .guest-setup p {
    margin: 0 0 1.5rem 0;
    color: #666;
    font-size: 1rem;
  }

  .guest-setup input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #e6e1d7;
    font-size: 1rem;
    margin-bottom: 1rem;
    box-sizing: border-box;
  }

  .guest-setup button {
    padding: 0.75rem 2rem;
    background: #456650;
    color: #fff4ec;
    border: 1px solid #456650;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.15s;
  }

  .guest-setup button:hover {
    background: #333;
    border-color: #333;
  }

  @media (max-width: 768px) {
    .game-container {
      padding: 1rem;
    }

    .game-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .game-main {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .player-info {
      width: 100%;
      justify-content: space-between;
    }

    .player {
      min-width: 100px;
    }

    .guest-setup {
      padding: 1.5rem;
    }
  }
</style> 