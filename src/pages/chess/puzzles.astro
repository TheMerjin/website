---
import ChessWebsiteLayout from '../../layouts/ChessWebsiteLayout.astro';
import PuzzleSolver from '../../components/PuzzleSolver';
---

<ChessWebsiteLayout>
  <div class="puzzles-header">
    <h1>Chess Puzzles</h1>
    <p class="puzzles-tagline">Test your tactical skills with daily puzzles</p>
  </div>
  
  <div class="puzzles-container">
    <PuzzleSolver client:load />
  </div>
</ChessWebsiteLayout>

<style>
  body {
    background: #fff4ec;
  }
  
  .puzzles-header {
    text-align: left;
    margin: 0 auto 2rem auto;
    max-width: 1100px;
    padding: 2rem 0 0.5rem 0;
    border-bottom: 1px solid #e6e1d7;
  }
  
  .puzzles-header h1 {
    font-size: 2.1rem;
    font-weight: 700;
    color: #333;
    font-family: 'Inter', sans-serif;
    margin: 0 0 0.2rem 0;
    letter-spacing: -1px;
  }
  
  .puzzles-tagline {
    font-size: 1.05rem;
    color: #456650;
    margin-bottom: 0.5rem;
    font-weight: 400;
  }
  
  .puzzles-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
</style>
