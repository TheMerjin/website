---
import Header from '../components/Header.astro';
import '../styles/global.css';
import NotesEditor from '../components/NotesEditor.jsx';
---
<meta charset="UTF-8" />
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<body>
<div class="notes-page-wrapper">
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
/>
<Header/>
<div class="notes-root">
  <main class="obsidian-main">
    <NotesEditor client:load />
  </main>
</div>
</div>
</body>

<style>
@import url('https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap');
@import '../styles/SidebarElement.css';

.notes-page-wrapper {
  min-height: 100vh;
  background: #f6f8fa;
  padding: 0;
}
.notes-root {
  display: flex;
  height: calc(100vh - var(--header-height, 3em));
  width: 100vw;
  background: #f8f2e4;
  background-color: #f8f2e4;
  position: relative;
  top: 0;
  justify-content: center;
}
.obsidian-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f8f2e4;
  height: 100%;
  max-width: 700px;
  margin: 2.5rem auto 0 auto;
  border-radius: 18px;
  box-shadow: 0 4px 32px rgba(0,0,0,0.07);
  padding: 2rem 2.5rem;
}
.obsidian-topbar {
  height: 48px;
  background: #f8f2e4;
  border-bottom: 1px solid rgb(var(--gray));
  display: flex;
  align-items: center;
  padding: 0.8rem 1.5rem 3rem 1.5rem;
  font-size: 2rem;
  font-weight: 700;
  letter-spacing: 1px;
  color: rgb(var(--black));
  font-family: 'Inter', sans-serif;
}

.obsidian-editor {
  flex: 1;
  padding: 2rem 2.5rem;
  background: #fff;
  color: #232323;
  font-size: 1.15rem;
  border: none;
  outline: none;
  resize: none;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  box-sizing: border-box;
  font-family: 'Atkinson Hyperlegible', Arial, sans-serif;
  box-shadow: 0 2px 12px rgba(0,0,0,0.04);
  margin-bottom: 1.5rem;
  transition: box-shadow 0.2s;
}
.obsidian-editor:focus {
  box-shadow: 0 4px 24px rgba(59,130,246,0.13);
}

/* Floating action button for new note (mobile) */
.fab-new-note {
  display: none;
  position: fixed;
  right: 24px;
  bottom: 24px;
  width: 56px;
  height: 56px;
  background: #3b82f6;
  color: #fff;
  border-radius: 50%;
  box-shadow: 0 4px 16px rgba(59,130,246,0.18);
  font-size: 2.2rem;
  align-items: center;
  justify-content: center;
  z-index: 100;
  border: none;
  cursor: pointer;
  transition: background 0.2s;
}
.fab-new-note:active {
  background: #2563eb;
}

@media (max-width: 800px) {
  .notes-root {
    padding: 0;
    height: auto;
    min-height: 100vh;
    background: #f6f8fa;
  }
  .obsidian-main {
    max-width: 100vw;
    margin: 0;
    border-radius: 0;
    box-shadow: none;
    padding: 0.5rem 0.5rem 4.5rem 0.5rem;
    min-height: 100vh;
  }
  .obsidian-editor {
    padding: 1.1rem 0.7rem;
    font-size: 1.08rem;
    border-radius: 10px;
    margin-bottom: 1.2rem;
    min-height: 220px;
  }
  .fab-new-note {
    display: flex;
  }
}

/* Sticky header for mobile */
@media (max-width: 800px) {
  .notes-page-wrapper Header {
    position: sticky;
    top: 0;
    z-index: 10;
    background: #f6f8fa;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  }
}
</style>

<!-- Floating action button for new note (mobile only) -->
<button class="fab-new-note" title="New Note" onclick="window.dispatchEvent(new CustomEvent('new-note'))">+</button>