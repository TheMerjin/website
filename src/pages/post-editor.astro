
<html lang="en">
<head>
  <title>Post Editor</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 p-10">
  <h1 class="text-2xl font-bold mb-6">Create a New Post</h1>
  <form id="postForm" class="max-w-xl space-y-4 bg-white p-6 rounded shadow">
    <input type="text" name="title" placeholder="Title" required class="w-full border p-2 rounded" />
    <textarea name="content" placeholder="Content" rows="6" required class="w-full border p-2 rounded"></textarea>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save Post</button>
  </form>
  <p id="status" class="mt-4 text-sm"></p>

  <script type="module">
    const form = document.getElementById('postForm');
    const status = document.getElementById('status');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      status.textContent = 'Checking login...';

      // Check logged in user
      const loginRes = await fetch('/api/auth/logged-in');
      if (!loginRes.ok) {
        status.textContent = 'You must be logged in to post.';
        return;
      }

      const { user } = await loginRes.json();

      // Gather form data
      const formData = new FormData(form);
      const post = {
        title: formData.get('title'),
        content: formData.get('content'),
        userId: user.id,
        username : user.user_metadata.username,
      };

      status.textContent = 'Saving post...';

      // Call post API
      const saveRes = await fetch('/api/auth/posts', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(post),
      });
      console.log("here")

      if (saveRes.ok) {
        status.textContent = 'Post saved!';
        form.reset();
      } else {
        const err = await saveRes.json();
        status.textContent = 'Error saving post: ' + (err.message || 'Unknown error');
      }
    });
  </script>
</body>
</html>
