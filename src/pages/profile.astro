        color: #555;
        }

        .user-stats span {
        display: inline-flex;
        align-items: center;
        }

        .user-stats svg {
        width: 1.1rem;
        height: 1.1rem;
        margin-right: 0.4rem;
        fill: currentColor;
        }

        .header-nav {
        font-size: 0.95rem;
        }

        .header-nav a {
