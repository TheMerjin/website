---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile</title>
</head>

<body style="font-family: 'Georgia', serif; background-color: #fff4ec; color: #333; margin: 0; padding: 0;">
    <Header/>
    <div class="profile-header">
        <div class="user-info">
        <h1 id="username">Loading...</h1>
        <div class="user-stats" id="user-stats">
            <!-- Stats will be injected -->
        </div>
        <div class="header-nav">
            <a href="#">My Posts</a><span>&bull;</span>
            <a href="#">Favorites</a><span>&bull;</span>
            <a href="#">Settings</a>
            <button class="logout-button">Logout</button>
        </div>
        </div>
        
    </div>

    <style>
        .logout-button {
        padding: 1rem 1rem;
        border-bottom: 1px solid #fff4ec;
        max-width: 900px;
        margin-left: 8rem;
        margin-right: auto;
        }
        .profile-header {
        padding: 1rem 5rem;
        border-bottom: 1px solid #fff4ec;
        max-width: 900px;
        margin-left: 12rem;
        margin-right: auto;
        }

        h1 {
        margin: 3 3 0.5rem 0;
        font-size: 2rem;
        }

        .user-stats {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1rem;
        color: #555;
        }

        .user-stats span {
        display: inline-flex;
        align-items: center;
        }

        .user-stats svg {
        width: 1.1rem;
        height: 1.1rem;
        margin-right: 0.4rem;
        fill: currentColor;
        }

        .header-nav {
        font-size: 0.95rem;
        }

        .header-nav a {
        text-decoration: none;
        margin: 0 0.5rem;
        color: #456650;
        font-weight: 500;
        }

        .header-nav span {
        color: #999;
        }
    </style>

    <script>
        const res = 0;

        const IconStar = `
        <svg viewBox="0 0 24 24"><path d="M12 2l3.1 6.3L22 9.3l-5 4.9L18.2 22 12 18.3 5.8 22 7 14.2 2 9.3l6.9-1L12 2z"/></svg>
        `;

        const IconDocumentStats = `
        <svg viewBox="0 0 24 24"><path d="M6 2h9l5 5v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1zm8 1.5V8h4.5L14 3.5zM8 13h8v-2H8v2zm0 4h8v-2H8v2z"/></svg>
        `;

        const IconCommentStats = `
        <svg viewBox="0 0 24 24"><path d="M21 6h-2v9H7l-4 4V6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2z"/></svg>
        `;

        document.getElementById("username").textContent = Auth.username;

        document.getElementById("user-stats").innerHTML = `
        <span>${IconStar}${Auth.stats.stars}</span>
        <span>${IconDocumentStats}${Auth.stats.posts}</span>
        <span>${IconCommentStats}${Auth.stats.comments}</span>
        `;
    </script>
</body>
</html>