      font-family: 'Inter', Helvetica, Arial, sans-serif;
    }
    .profile-nav-lw {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 0.5rem;
      font-family: 'Inter', Helvetica, Arial, sans-serif;
      font-size: 1rem;
      margin-top: 0.1rem;
    }
