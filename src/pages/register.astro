---
import WebsiteLayout from '../layouts/WebsiteLayout.astro';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';



---

<WebsiteLayout>
  <h3 class="register-title">Greetings traveler. Register here</h3>
  <div class="page-content">
    <form action="/api/auth/register" method="post">
      <input
        type="text"
        class="email-input"
        id = "email"
        name="email"
        placeholder="Wizard@gmail.com"
        required
      />
      <input
        type="text"
        class="register-input"
        id = "username"
        name="username"
        placeholder="Username"
        required
      />
      <input
        type="password"
        id = "password"
        class="register-input"
        name="password"
        placeholder="Password"
        required
      />
      <button id = "button" type="submit">Register</button>
    </form>
  </div>
  <Footer />
</WebsiteLayout>

<style>
  .register-title {
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-top: 20px;
  }

  .page-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
    margin-top: 2rem;
  }

  .register-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75em;
  }

  .register-input {
    width: 200px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .email-input {
    width: 200px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .auth-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    width: 200px;
    margin-top: 1rem;
  }

  .auth-links a {
    text-decoration: none;
    color: #0077cc;
    font-size: 14px;
  }

  .auth-links a:hover {
    text-decoration: underline;
  }

  .register-link,
  .reset-link {
    text-align: center;
    font-size: 16px;
    margin-top: 0;
  }
</style>
