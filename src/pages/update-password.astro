---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<html lang="en">
  <head>
    <BaseHead title={`Set New Password | ${SITE_TITLE}`} description="Set a new password after reset." />
  </head>
  <body>
    <Header />

    <main>
      <h3 class="title">Set a new password</h3>

      <div class="form-wrapper">
        <form id="update-password-form">
          <input
            type="password"
            name="password"
            id="password"
            class="input"
            placeholder="New Password"
            required
          />
          <button type="submit">Update Password</button>
        </form>
        <p id="message"></p>
      </div>
    </main>

    <Footer />

    <script type="module">
      const form = document.getElementById('update-password-form');
      const message = document.getElementById('message');

      const accessToken = new URLSearchParams(window.location.hash.substring(1)).get('access_token');

      if (!accessToken) {
        message.textContent = "Invalid or missing token.";
        form.style.display = "none";
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const password = document.getElementById('password').value;

        const res = await fetch('/api/auth/update-password', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ password, accessToken })
        });

        if (res.ok) {
          message.textContent = "Password successfully updated!";
          form.reset();
        } else {
          const { error } = await res.json();
          message.textContent = `Error: ${error}`;
        }
      });
    </script>
  </body>
</html>

<style>
  .title {
    text-align: center;
    font-size: 22px;
    margin-top: 2rem;
  }

  .form-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 2rem;
  }

  #update-password-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 300px;
  }

  .input {
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button {
    padding: 10px;
    font-size: 1rem;
    background-color: #0077cc;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background-color: #005fa3;
  }

  #message {
    text-align: center;
    margin-top: 1rem;
    font-size: 1rem;
  }
</style>